<h1>文章列表</h1>

<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <!--添加此导航-->
      <td><%= link_to '显示文章', article_path(article) %></td>
      <td><%= link_to '编辑', edit_article_path(article) %></td>
      <td><%= link_to '删除', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <%= link_to '新建文章', new_article_path %>
</table>

<%= select_date Date.today,prefix: :start_date %>